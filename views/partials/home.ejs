<div id='chart' class='chart container'></div>
<div class="container">
  <div class='row stocks'>
    <div class="col-md-3 col-sm-4 col-xs-6" ng-repeat='stock in stocks'>
      <div class="stock">
        <h3>{{stock.symbol}}</h3>
        <span class='name'>{{stock.name}}</span>
        <span class='delete' ng-click='deleteStock(stock.symbol)'>x</span>
      </div>
    </div>
    <div class="col-md-3 col-sm-4 col-xs-6">
      <div class="stock">
        <form novalidate ng-submit='addStock()'>
          <input type='text' ng-model='symbol' placeholder='Stock code' />
          <input type='submit' class='btn-add' value='add' />
      </form>
      </div>
    </div>
  </div>
</div>